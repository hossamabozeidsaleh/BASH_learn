11111function display_menu() {
    echo "اختر عملية حسابية:"
    echo "1) جمع"
    echo "2) طرح"
    echo "3) ضرب"
    echo "4) قسمة"
    echo "5) خروج"
    read -p "ادخل اختيارك (1-5): " choice
    echo ""
}

# وظيفة لتنفيذ العملية الحسابية
function perform_calculation() {
    local operation=$1
    local num1=$2
    local num2=$3

    case $operation in
        1) result=$(echo "$num1 + $num2" | bc);;
        2) result=$(echo "$num1 - $num2" | bc);;
        3) result=$(echo "$num1 * $num2" | bc);;
        4) 	if [ "$num2" -eq 0 ]; then
                echo "لا يمكن القسمة على الصفر"
                return
            else
                result=$(echo "scale=2; $num1 / $num2" | bc)
            fi
            ;;
        *) echo "اختيار غير صحيح"; return;;
    esac

    echo "النتيجة: $result"
    echo ""
